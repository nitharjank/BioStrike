<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layout_gravity="center"
    >

    <!-- Main content on the screen-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            >

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/hamburger2"
                android:fontFamily="@font/amarante"
                android:text=""
                android:textSize="30dp"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/convergence"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="PROFILE"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginTop="5dp"

            />


    </RelativeLayout>

    <!-- This layout is for the tabs -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"

        >
        <Button
            android:id="@+id/currentButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:fontFamily="@font/convergence"
            android:text="Current"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_design"
            android:layout_alignParentLeft="true"

            />
        <Button
            android:id="@+id/pastButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:fontFamily="@font/convergence"
            android:text="Past"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_design"
            android:layout_toRightOf="@+id/currentButton"

            />
        <Button
            android:id="@+id/goalsButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:fontFamily="@font/convergence"
            android:text="Goals"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_design"
            android:layout_toEndOf="@+id/pastButton"
            />

        <Button
            android:id="@+id/deviceButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:fontFamily="@font/convergence"
            android:text="Devices"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_design"
            android:layout_toEndOf="@+id/goalsButton"
            />
    </RelativeLayout>

    <!-- User Profile-->

    <!-- For hamburger button will implement later-->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:id="@+id/drawerPane"
        android:layout_gravity="start">


    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
