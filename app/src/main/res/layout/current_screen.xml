<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layout_gravity="center"
    >

    <!-- Main content on the screen-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:id="@+id/currentScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            >
        </LinearLayout>

        <TextView
            android:id="@+id/past"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/convergence"
            android:text="Current Session"
            android:textColor="@color/white"
            android:textSize="30dp"

            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/past"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            android:text=" TIMER: 00:00:00"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
        <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp"
            android:id="@+id/startbutton" />
        <Button
            android:text="Pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pausebutton"
            android:layout_alignBaseline="@+id/button"
            android:layout_alignBottom="@+id/startbutton"
            android:layout_centerHorizontal="true" />
        <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pausebutton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/resetbutton" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="237dp"
            android:layout_height="407dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:src="@drawable/currentsession"
            app:srcCompat="@drawable/human_body" />

    </RelativeLayout>

    <!-- This layout is for the tabs -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"

        >
        <Button
            android:id="@+id/homeButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/convergence"
            android:text="Home"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_design"
            android:layout_alignParentLeft="true"

            />
        <Button
            android:id="@+id/pastButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:fontFamily="@font/convergence"
            android:text="Past"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_design"
            android:layout_toRightOf="@+id/homeButton"

            />
        <Button
            android:id="@+id/goalsButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:fontFamily="@font/convergence"
            android:text="Goals"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_design"
            android:layout_toEndOf="@+id/pastButton"
            />

        <Button
            android:id="@+id/deviceButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:fontFamily="@font/convergence"
            android:text="Devices"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_design"
            android:layout_toEndOf="@+id/goalsButton"
            />
    </RelativeLayout>

    <!-- User Profile-->

    <!-- For hamburger button will implement later-->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:id="@+id/drawerPane"
        android:layout_gravity="start">


    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
